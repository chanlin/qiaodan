<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/dialog_share_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:orientation="vertical"
        android:padding="0dp" >

        <TextView
            android:id="@+id/dialog_share_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00ffffff"
            android:gravity="center_horizontal"
            android:maxLength="100"
            android:padding="10dp"
            android:singleLine="true"
            android:text="选择要使用的应用"
            android:textColor="#333333"
            android:textSize="18dp" />

        <View
            android:id="@+id/dialog_share_view"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d9d9d9" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:orientation="horizontal"
            android:padding="0dp" >

            <LinearLayout
                android:id="@+id/dialog_share_wechatlinearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <ImageView
                    android:id="@+id/dialog_share_wechatimageview"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="#00ffffff"
                    android:scaleType="fitXY"
                    android:src="@drawable/umeng_socialize_wechat" />

                <TextView
                    android:id="@+id/dialog_share_wechattextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="#00ffffff"
                    android:maxLength="100"
                    android:singleLine="true"
                    android:text="微信好友"
                    android:textColor="#333333"
                    android:textSize="13sp" />
            </LinearLayout>

            <View
                android:id="@+id/dialog_share_view0"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#d9d9d9" />

            <LinearLayout
                android:id="@+id/dialog_share_pengyoulinearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <ImageView
                    android:id="@+id/dialog_share_pengyouimageview"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="#00ffffff"
                    android:scaleType="fitXY"
                    android:src="@drawable/umeng_socialize_wxcircle" />

                <TextView
                    android:id="@+id/dialog_share_pengyoutextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="#00ffffff"
                    android:maxLength="100"
                    android:singleLine="true"
                    android:text="朋友圈"
                    android:textColor="#333333"
                    android:textSize="13sp" />
            </LinearLayout>

            <View
                android:id="@+id/dialog_share_view1"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#d9d9d9" />

            <LinearLayout
                android:id="@+id/dialog_share_xinlanglinearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <ImageView
                    android:id="@+id/dialog_share_xinlangimageview"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="#00ffffff"
                    android:scaleType="fitXY"
                    android:src="@drawable/umeng_socialize_qq" />

                <TextView
                    android:id="@+id/dialog_share_xinlangtextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="#00ffffff"
                    android:maxLength="100"
                    android:singleLine="true"
                    android:text="QQ"
                    android:textColor="#333333"
                    android:textSize="13sp" />
            </LinearLayout>

            <View
                android:id="@+id/dialog_share_view2"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#d9d9d9" />

            <LinearLayout
                android:id="@+id/dialog_share_qq_zone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <ImageView
                    android:id="@+id/dialog_share_qq_zone_iv"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="#00ffffff"
                    android:scaleType="fitXY"
                    android:src="@drawable/umeng_socialize_qzone" />

                <TextView
                    android:id="@+id/dialog_share_qq_zone_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="#00ffffff"
                    android:maxLength="100"
                    android:singleLine="true"
                    android:text="QQ空间"
                    android:textColor="#333333"
                    android:textSize="13sp" />
            </LinearLayout>
            <View
                android:id="@+id/dialog_share_view2"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#d9d9d9" />

            <LinearLayout
                android:id="@+id/dialog_share_weibo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <ImageView
                    android:id="@+id/dialog_share_weibo_iv"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="#00ffffff"
                    android:scaleType="fitXY"
                    android:src="@drawable/umeng_socialize_sina" />

                <TextView
                    android:id="@+id/dialog_share_weibo_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="#00ffffff"
                    android:maxLength="100"
                    android:singleLine="true"
                    android:text="新浪微博"
                    android:textColor="#333333"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/dialog_share_cancletextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="100"
        android:singleLine="true"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape"
        android:text="取消"
        android:textColor="#333333"
        android:textSize="18dp" />

</LinearLayout>