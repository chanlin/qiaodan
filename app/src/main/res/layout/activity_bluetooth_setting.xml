<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bluetooth_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jordan.project.activities.ble.BluetoothSettingActivity">
    <TextView
        android:id="@+id/bluetooth_settings_process_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="11111111"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/bluetooth_settings_process_iv"
        android:layout_width="175dp"
        android:layout_height="211dp"
        android:src="@drawable/ble_process"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/bluetooth_settings_process_tv"/>

    <TextView
        android:id="@+id/bluetooth_settings_bound_device_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bluetooth_settings_process_iv"
        android:textSize="20dp"
        android:text="配对蓝牙设备"/>

    <TextView
        android:id="@+id/bluetooth_settings_bound_device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bluetooth_settings_bound_device_title"
        android:textSize="20dp"
        android:text=""/>

    <TextView
        android:id="@+id/bluetooth_settings_bound_device_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bluetooth_settings_bound_device_title"
        android:layout_alignParentRight="true"
        android:textSize="20dp"
        android:text="配对的蓝牙设备"/>

    <TextView
        android:id="@+id/bluetooth_settings_bound_device_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bluetooth_settings_bound_device_name"
        android:textSize="20dp"
        android:text="选择蓝牙设备"/>

    <ListView
        android:id="@+id/bluetooth_settings_bound_device_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bluetooth_settings_bound_device_list_title"/>
</RelativeLayout>
