<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/common_title_bg"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="60dp">
    <Button
        android:id="@+id/bind_bluetooth"
        android:text="@string/bind"
        android:layout_alignParentRight="true"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@mipmap/login_button"
        android:textColor="@color/white"

        android:textSize="@dimen/login_button_text_size" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/bind_bluetooth"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bluetooth_list_mac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAC:73:73:82:77:38:28"
            android:textColor="@color/scan_list_text"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/bluetooth_list_sn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="SN:73:73:82:77:38:28"
            android:textColor="@color/scan_list_text"
            android:textSize="14dp" />
    </LinearLayout>
    </RelativeLayout>
</RelativeLayout>