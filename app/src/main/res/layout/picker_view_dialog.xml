<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/register_data_chooes_bottom"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/pick_view_bg">

        <com.jordan.project.widget.PickerView
            android:id="@+id/register_data_picker_view"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="60dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/register_data_chooes_cancel"
                style="@style/width_identical_frame"
                android:background="@color/common_button_cancel"
                android:text="@string/common_cancel"
                android:textColor="@color/white"
                android:textSize="@dimen/login_to_register_text_size" />

            <Button
                android:id="@+id/register_data_chooes_submit"
                style="@style/width_identical_frame"
                android:background="@color/login_to_register_text"
                android:text="@string/common_confirm"
                android:textColor="@color/white"
                android:textSize="@dimen/login_to_register_text_size" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp">

        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/iv_line_top"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/pick_view_line" />

            <ImageView
                android:id="@+id/iv_line_end"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/pick_view_line" />

            <TextView
                android:id="@+id/pick_view_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_line_top"
                android:layout_centerVertical="true"
                android:textColor="#66FFFFFF"
                android:textSize="22dp" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>