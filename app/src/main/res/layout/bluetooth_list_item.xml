<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <RelativeLayout
        android:id="@+id/time_point"
        android:layout_width="60dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/choies_bluetooth_iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/choies_bluetooth_normal" />
    </RelativeLayout>

    <TextView
        android:id="@+id/bluetooth_list_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/time_point"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:textSize="18dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@id/bluetooth_list_time"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bluetooth_list_mac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/user_share_time_year"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/bluetooth_list_sn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/user_share_time_year"
            android:textSize="14dp" />
    </LinearLayout>
</RelativeLayout>